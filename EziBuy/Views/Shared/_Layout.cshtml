<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EziBuy</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EziBuy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>
                        @Html.ActionLink("About", "About", "RegistrationAndLogin", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    @*making change as if loged in as admin then navbar have following tabs*@

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("User List", "UsersDetail", "Admin", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Category List", "DisplayProductCategory", "Category", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Product List", "DisplayProductDetails", "Product", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Home Carousel", "DisplayCarouselDetails", "Carousel", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Images", "DisplayProductImages", "Image", new { area = "" }, new { @class = "navbar-brand" })</li>
                        }
                        <li>@Html.ActionLink("Profile", "UserInformation", "UserProfile", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <
                        <li>@Html.ActionLink("Logout", "Logout", "RegistrationAndLogin", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                </ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink(" ", "Login", "RegistrationAndLogin", new { area = "" }, htmlAttributes: new { @class = "navbar-brand glyphicon glyphicon-log-in ", @title = "Log In" })</li>
                        <li>@Html.ActionLink(" ", "Registration", "RegistrationAndLogin", new { area = "" }, htmlAttributes: new { @class = "navbar-brand glyphicon glyphicon-user", @title = "Register Now" })</li>


                    </ul>
                }


            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>