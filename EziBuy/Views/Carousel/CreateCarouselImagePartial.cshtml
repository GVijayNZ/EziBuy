@model EziBuy.Models.ProductViewModel

@Html.AntiForgeryToken()


<div>
    <form action="/Carousel/CreateImage" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.Caption, new { @class = "form-control", @placeholder = "Image Caption" })
                @Html.ValidationMessageFor(model => model.Caption, "")
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.ImageUpload, new { type = "file" })
                @Html.ValidationMessageFor(model => model.ImageUpload, "")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.AltText, new { @class = "form-control", @placeholder = "Alternate Text" })
                @Html.ValidationMessageFor(model => model.AltText, "")
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Add New Image" class="btn btn-success" />
            </div>
        </div>

    </form>


</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>




