@model EziBuy.Models.ProductViewModel


<div>
    <form action="/Image/AddProductImages" method="post" enctype="multipart/form-data">


        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.ImageUpload, new { type = "file" })
                @Html.ValidationMessageFor(model => model.ImageUpload, "")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.DropDownListFor(model => model.ProductId, new SelectList(ViewBag.productDetails, "Id", "ProductName"), "Choose Product Category", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductId, "")
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Add New Product Image" class="btn btn-success" />
            </div>
        </div>

    </form>


</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

